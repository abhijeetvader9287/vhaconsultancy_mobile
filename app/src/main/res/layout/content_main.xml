<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bg_gradient"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">
<LinearLayout
     android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:paddingStart="0dp"
            android:paddingEnd="15dp"
            android:singleLine="true"
            android:text="@string/tagline"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            android:textSize="25sp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView

            android:elevation="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"

            android:id="@+id/cardPersonalInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            >
<LinearLayout
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"><TextView
            android:padding="@dimen/dimen_10dp"
            android:id="@+id/editTextNameLable"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/name"
            android:imeOptions="actionNext"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="@color/textColorHint"
            android:textColorHint="@color/textColorHint"

            android:textSize="15sp"
            android:textStyle="bold" /><TextView
            android:padding="@dimen/dimen_10dp"
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint=""
            android:imeOptions="actionNext"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="@color/textColor"

            android:textSize="15sp"
            android:textStyle="bold" /></LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:orientation="horizontal"
              android:layout_height="wrap_content"><TextView
              android:padding="@dimen/dimen_10dp"

              android:id="@+id/editTextMobileNumberLable"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_gravity="center_vertical"
              android:background="@null"
              android:editable="false"
              android:gravity="center_vertical"
              android:hint="@string/mobile_number"
              android:imeOptions="actionNext"
              android:inputType="number"
              android:paddingStart="15dp"
              android:paddingEnd="15dp"
              android:selectAllOnFocus="true"
              android:singleLine="true"
              android:textColor="@color/textColorHint"
              android:textColorHint="@color/textColorHint"
              android:textSize="15sp"
              android:textStyle="bold" /><TextView
              android:padding="@dimen/dimen_10dp"

              android:id="@+id/editTextMobileNumber"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center_vertical"
              android:background="@null"
              android:editable="false"
              android:gravity="center_vertical"
              android:hint=""
              android:imeOptions="actionNext"
              android:inputType="number"
              android:paddingStart="15dp"
              android:paddingEnd="15dp"
              android:selectAllOnFocus="true"
              android:singleLine="true"
              android:textColor="@color/textColor"
                android:textSize="15sp"
              android:textStyle="bold" /></LinearLayout>
</LinearLayout>
        </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        android:elevation="20dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="8dp">

        <Button
            android:id="@+id/action_profile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:paddingStart="0dp"
            android:paddingEnd="15dp"
            android:singleLine="true"
            android:text="@string/action_profile"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        android:elevation="20dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="8dp">

        <Button
            android:id="@+id/action_add_plot"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:paddingStart="0dp"
            android:paddingEnd="15dp"
            android:singleLine="true"
            android:text="@string/action_add_plot"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        android:elevation="20dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="8dp">

        <Button
            android:id="@+id/action_list_plot"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:paddingStart="0dp"
            android:paddingEnd="15dp"
            android:singleLine="true"
            android:text="@string/action_list_plot"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        android:elevation="20dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="8dp">

        <Button
            android:id="@+id/action_logout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:paddingStart="0dp"
            android:paddingEnd="15dp"
            android:singleLine="true"
            android:text="@string/action_logout"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </androidx.cardview.widget.CardView>
</LinearLayout>

</LinearLayout>